{
  "name": "npm-dev-mcp",
  "version": "1.0.0",
  "description": "MCP server for managing npm run dev processes",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "npm-dev-mcp": "./dist/index.js"
  },
  "files": [
    "dist/",
    "README.md",
    "package.json"
  ],
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsc --watch",
    "prepublishOnly": "npm run build",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop npm-dev-mcp",
    "pm2:restart": "pm2 restart npm-dev-mcp",
    "pm2:delete": "pm2 delete npm-dev-mcp",
    "pm2:logs": "pm2 logs npm-dev-mcp",
    "pm2:monit": "pm2 monit",
    "pm2:status": "pm2 status npm-dev-mcp"
  },
  "keywords": ["mcp", "npm", "dev-server", "process-management", "cli", "npx"],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/username/npm-dev-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/username/npm-dev-mcp/issues"
  },
  "homepage": "https://github.com/username/npm-dev-mcp#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}